{
  "extends": "@tsconfig/node22/tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./",
    "paths": {
      "@/*": ["./src/*"],
      "@t/*": ["./types/*"],
      "@test/*": ["./src/__test__/*"],
      "@utils/*": ["./src/utils/*"],
      "@mdlwr/*": ["./src/middleware/*"],
      "@controls/*": ["./src/controllers/*"],
      "@routes/*": ["./src/routes/*"]
    }
  },
  "include": ["**/*.ts", "eslint.config.ts"],
  "exclude": ["dist"]
}
